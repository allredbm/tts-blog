<p id="notice"><%= notice %></p>

<h1><%= @user.blog_title %></h1>

<p>
  <strong>Published by:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit Information', edit_user_path(@user), class: "btn btn-warning"%> |
<%= link_to 'Back to Users', users_path, class: "btn btn-default"%>


<h4>Posts in this blog:</h4>

<div class="row">
	<% @blog_posts.each do |blog_post| %>
		<% if blog_post.user_id == @user.id %>
			<div class="col-md-6">
      			<div class="panel panel-default">
        			<div class="panel-heading">
          				<h3><%= link_to blog_post.post_title, blog_post %></h3>
        			</div>
        			<div class="panel-body">
          				<p>by <%= blog_post.user.username %></p>
          				<p><small><em><%= time_ago_in_words(blog_post.created_at) %> ago</em></small></p>
          				<p><%= blog_post.post_entry[0..250] %> ... <%= link_to "[ Read More]", blog_post %></p>
        			</div>
        			<div class="panel-footer">
          				<%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-warning" %>
          				<%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        			</div>
      			</div>
    		</div>
		<% end %>
	<% end %>
</div>